[general]
# A folder where vdirsyncer can store some metadata about each pair.
status_path = "~/.local/share/vdirsyncer/status"

[pair robert_contacts]
a           = "robert_contacts_local"
b           = "robert_contacts_remote"
collections = ["from a", "from b"]
metadata    = ["displayname"]
conflict_resolution = ["command", "nvim", "-d"]

[storage robert_contacts_local]
type    = "filesystem"
path    = "~/.local/share/contacts"
fileext = ".vcf"

[storage robert_contacts_remote]
type           = "carddav"
url            = "https://dav.buchberger.cloud/"
username       = "robert"
password.fetch = ["command", "~/.config/vdirsyncer/get_pass.sh"]

[pair robert_calendar]
a           = "robert_calendar_local"
b           = "robert_calendar_remote"
collections = ["from b"]
conflict_resolution = ["command", "nvim", "-d"]
metadata = ["displayname", "color"]

[storage robert_calendar_local]
type    = "filesystem"
path    = "~/.local/share/calendars/"
fileext = ".ics"

[storage robert_calendar_remote]
type           = "caldav"
url            = "https://dav.buchberger.cloud/"
username       = "robert"
password.fetch = ["command", "~/.config/vdirsyncer/get_pass.sh"]

[pair us_holidays]
a = "us_holidays_public"
b = "us_holidays_local"
collections = null
# partial_sync = ignore

[storage us_holidays_public]
type = "http"
url = "https://www.officeholidays.com/ics-clean/usa"

[storage us_holidays_local]
type    = "filesystem"
path    = "~/.local/share/calendars/us_holidays"
fileext = ".ics"

[pair pl_holidays]
a = "pl_holidays_public"
b = "pl_holidays_local"
collections = null
# partial_sync = ignore

[storage pl_holidays_public]
type = "http"
url = "https://www.officeholidays.com/ics-clean/poland"

[storage pl_holidays_local]
type    = "filesystem"
path    = "~/.local/share/calendars/pl_holidays"
fileext = ".ics"
