browser "qutebrowser %u"
articlelist-format "%D | %20a | %t"
itemview-title-format "(%u unread) %F | %T"

display-article-progress yes
text-width 80
article-sort-order date-desc
reload-threads 20
bookmark-cmd ~/scripts/bookmark
show-read-articles no

